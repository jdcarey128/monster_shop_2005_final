<h1>Order Information for Order #<%= @order.id %></h1>
<br>
<section class="order-info">
  <h2>Customer Information</h2>
  <p><%= @order.name %></p>
  <p><%= @order.address %></p>
  <p><%= @order.city %>, <%= @order.state %>, <%= @order.zip %></p>
</section>

<section class="order-items">
  <h2>All Item Details</h2>
  <% @order.merchant_items(@merchant_id).each do |item| %>
    <section id="item-<%= item.id %>">
      <h4><%= link_to "#{item.name}", "/items/#{item.id}" %></h4>
      <p><%= image_tag(item.image) %></p>
      <p>Price per Item: <%= item.price %></p>
      <p>Quantity Ordered: <%= item.quantity_ordered(item.id) %></p>
    </section>
  <% end %>
</section>
