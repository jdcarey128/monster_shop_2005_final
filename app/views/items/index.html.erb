<% if @merchant %>
  <h1><%= link_to @merchant.name, "/merchants/#{@merchant.id}"%><span> Items</span></h1>
  <p align="center"><%= link_to "Add New Item", "/merchants/#{@merchant.id}/items/new" %></p>
<% else %>
  <h1>All Items</h1>
<% end %>

<section class="grid-container">
  <% @items.each do |item| %>
    <section class = "grid-item" id= 'item-<%=item.id%>'>
      <h2> <%=link_to item.name, "/items/#{item.id}" %> </h2>
      <p>Sold by: <%=link_to item.merchant.name, "/merchants/#{item.merchant.id}" %></p>
      <%= link_to(image_tag(item.image), "items/#{item.id}") %>
      <p> <%= item.description unless @merchant%> </p>
      <p>Price: <%=number_to_currency(item.price) %> </p>
      <p>Inventory: <%= item.inventory %> </p>
      <% if !@merchant %>
      <% end %>
      <% if item.active? %>
        <p>Active | <%= link_to 'Deactivate', "/items/#{item.id}?status=deactivate", method: :patch %></p>
      <% else %>
        <p>Inactive | <%= link_to 'Activate', "/items/#{item.id}?status=activate", method: :patch %></p>
      <% end %>
      <% if item.no_orders? %>
        <p><%= button_to 'Delete', "/items/#{item.id}", params: { merchant_id: @merchant.id }, method: :delete %></p>
      <% end %>
    </section>
    <% end %>
</section>

<% if ItemOrder.unique_items >= 10 %>
  <section class="item-statistics">
    <section id="most-popular">
      <h4>Most Popular Items:</h4>
      <% Item.most_popular_five.each do |item| %>
        <p><%= link_to "#{item.name}", item_path(item) %> Total Quantity Purchased: <%= item.quantity_purchased %></p>
      <% end %>
    </section>

    <section id="least-popular">
      <h4>Least Popular Items:</h4>
      <% Item.least_popular_five.each do |item| %>
        <p><%= link_to "#{item.name}", item_path(item) %> Total Quantity Purchased: <%= item.quantity_purchased %></p>
      <% end %>
    </section>
  </section>
<% end %>
