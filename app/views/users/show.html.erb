<h1>Hello, <%= current_user.name %></h1>

<section class="user-profile">
  <h3>User Profile</h3>
  <%= link_to "Edit Profile Data", profile_edit_path(current_user) %>
  <p>Name: <%= current_user.name %></p>
  <p>Street Address: <%= current_user.street_address %></p>
  <p>City: <%= current_user.city %></p>
  <p>State: <%= current_user.state %></p>
  <p>Zip: <%= current_user.zip %></p>
  <p>Email: <%= current_user.email %></p>
  <p>Registered Member Since: <%= format_date(current_user.created_at) %></p>
</section>
