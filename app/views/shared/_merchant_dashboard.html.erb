<h1>Merchant Dashboard</h1>

<section class="merchant-info">
  <p>Name: <%= @merchant.name %></p>
  <p>Street Address: <%= @merchant.address %></p>
  <p>City: <%= @merchant.city %></p>
  <p>State: <%= @merchant.state %></p>
  <p>Zip: <%= @merchant.zip %></p>
  <p>Registered Merchant Since: <%= format_date(@merchant.created_at) %></p>
</section>

<section class="pending-orders">
  <h3>Pending Orders</h3>
  <% @merchant.pending_orders.each do |order| %>
    <ul>
      <div class="order" id="order-<%= order.id %>">
        <li>Order: <%= link_to order.id, "/merchant/orders/#{order.id}" %></li>
        <li>Date of order: <%= format_date(order.created_at) %></li>
        <li>Order quantity: <%= @merchant.order_item_quantity(order) %></li>
        <li>Order total: <%= price_format(@merchant.order_total(order)) %></li>
      </div>
    </ul>
  <% end %>
</section>
