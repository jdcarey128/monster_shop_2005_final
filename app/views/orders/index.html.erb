<h1>All Orders for <%= @user.name %></h1>
<section class="orders">
  <% @user.orders.each do |order| %>
    <section id="order-<%= order.id %>">
      <p>Order ID: <%= link_to order.id, "/profile/orders/#{order.id}" %></p>
      <p>Order Created On: <%= order.created_at %></p>
      <p>Order Updated On: <%= order.updated_at %></p>
      <p>Order Status: <%= order.status %></p>
      <p>Total Quantity of Items: <%= order.grandtotal %></p>
      <!-- changed the above to not have to bug Shaunda again, she can overwrite this to the real method-->
      <p>Grand Total: <%= order.grandtotal %></p>
    </section>
  <% end %>
</section>
